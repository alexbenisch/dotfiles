#!/bin/bash

set -euo pipefail

XDG_CONFIG_HOME="$HOME/.config"

echo "ğŸš€ Setting up dotfiles..."

# Install zsh if not present
if ! command -v zsh >/dev/null; then
  echo "ğŸ“¦ Installing zsh..."
  if command -v apt >/dev/null; then
    sudo apt update && sudo apt install -y zsh
  elif command -v yum >/dev/null; then
    sudo yum install -y zsh
  elif command -v dnf >/dev/null; then
    sudo dnf install -y zsh
  elif command -v pacman >/dev/null; then
    sudo pacman -S --noconfirm zsh
  elif command -v brew >/dev/null; then
    brew install zsh
  else
    echo "âš ï¸  Package manager not found. Please install zsh manually."
    exit 1
  fi
  echo "âœ… Zsh installed"
fi

# Set zsh as default shell if available
if command -v zsh >/dev/null; then
  if [ "$SHELL" != "$(command -v zsh)" ]; then
    echo "ğŸ“ Setting zsh as default shell..."
    sudo chsh -s "$(command -v zsh)" "$USER"
    echo "âœ… Zsh set as default shell (restart terminal to take effect)"
  fi
fi

# Install and configure locales for Debian-based systems
if ! locale -a | grep -q "en_US.utf8\|en_US.UTF-8" && command -v apt >/dev/null; then
  echo "ğŸŒ Configuring locales..."
  sudo apt update && sudo apt install -y locales
  sudo locale-gen en_US.UTF-8
  sudo update-locale LANG=en_US.UTF-8
  echo "âœ… Locales configured"
fi

# Install chezmoi if not present
if ! command -v chezmoi >/dev/null; then
  echo "ğŸ“¦ Installing chezmoi..."
  sh -c "$(curl -fsLS get.chezmoi.io)"
  echo "âœ… Chezmoi installed"
fi

# Setup Zsh Pure prompt
if [ ! -d "$HOME/.zsh" ]; then
  echo "ğŸ“ Creating ~/.zsh directory..."
  mkdir -p "$HOME/.zsh"
fi

if [ ! -d "$HOME/.zsh/pure" ]; then
  echo "ğŸ¨ Installing Pure prompt theme..."
  git clone https://github.com/sindresorhus/pure.git "$HOME/.zsh/pure"
  echo "âœ… Pure prompt installed"
fi

# Install fzf if not available (fallback to system packages)
if ! command -v fzf >/dev/null; then
  echo "ğŸ” Installing fzf..."
  if command -v apt >/dev/null; then
    sudo apt update && sudo apt install -y fzf
  elif command -v yum >/dev/null; then
    sudo yum install -y fzf
  elif command -v dnf >/dev/null; then
    sudo dnf install -y fzf
  elif command -v pacman >/dev/null; then
    sudo pacman -S --noconfirm fzf
  elif command -v brew >/dev/null; then
    brew install fzf
  else
    echo "âš ï¸  Package manager not found for fzf. Will try via mise."
  fi
fi

# Setup Alacritty themes if Alacritty is installed
if command -v alacritty >/dev/null; then
  if [ ! -d "$XDG_CONFIG_HOME/alacritty/themes" ]; then
    echo "ğŸ¨ Installing Alacritty themes..."
    mkdir -p "$XDG_CONFIG_HOME"/alacritty/themes
    git clone https://github.com/alacritty/alacritty-theme "$XDG_CONFIG_HOME"/alacritty/themes
    echo "âœ… Alacritty themes installed"
  fi
fi

# Install tmux if not present
if ! command -v tmux >/dev/null; then
  echo "ğŸ–¥ï¸  Installing tmux..."
  if command -v apt >/dev/null; then
    sudo apt update && sudo apt install -y tmux
  elif command -v yum >/dev/null; then
    sudo yum install -y tmux
  elif command -v dnf >/dev/null; then
    sudo dnf install -y tmux
  elif command -v pacman >/dev/null; then
    sudo pacman -S --noconfirm tmux
  elif command -v brew >/dev/null; then
    brew install tmux
  else
    echo "âš ï¸  Package manager not found for tmux. Please install manually."
  fi
fi

# Validate tmux configuration and install tpm if needed
if command -v tmux >/dev/null; then
  mkdir -p "$XDG_CONFIG_HOME"/tmux/plugins
  
  # Check if tpm is installed
  if [ ! -d "$XDG_CONFIG_HOME/tmux/plugins/tpm" ]; then
    echo "ğŸ”Œ Installing tmux plugin manager (tpm)..."
    git clone https://github.com/tmux-plugins/tpm "$XDG_CONFIG_HOME"/tmux/plugins/tpm
    
    # Install plugins if tmux config exists
    if [ -f "$XDG_CONFIG_HOME/tmux/tmux.conf" ]; then
      echo "ğŸ“¦ Installing tmux plugins..."
      "$XDG_CONFIG_HOME"/tmux/plugins/tpm/bin/install_plugins
    fi
    echo "âœ… Tmux plugin manager installed"
  fi
fi

# Setup mise if not installed
if ! command -v mise >/dev/null; then
  echo "ğŸ”§ Installing mise..."
  curl https://mise.run | sh
  echo "âœ… Mise installed"
  
  # Add mise to PATH for this session
  export PATH="$HOME/.local/bin:$PATH"
fi

# Install tools via mise if available
if command -v mise >/dev/null; then
  echo "ğŸ“¦ Installing development tools via mise..."
  
  # Install all tools from config if config exists
  if [ -f "$HOME/.config/mise/config.toml" ] || [ -f "$XDG_CONFIG_HOME/mise/config.toml" ]; then
    mise install
    echo "âœ… All mise tools installed from config"
  else
    # Fallback: install essential tools including uv
    echo "ğŸ“‹ Installing essential tools..."
    mise use -g uv@latest
    mise use -g bat@latest
    mise use -g fzf@latest
    mise use -g lsd@latest
    mise use -g ripgrep@latest
    mise use -g kubectl@latest
    mise use -g flux@latest
    mise use -g k9s@latest
    echo "âœ… Essential tools installed via mise"
  fi
  
  # Check for critical tools and install if missing
  echo "ğŸ” Checking for critical development tools..."
  
  if ! command -v uv >/dev/null; then
    echo "ğŸ Installing uv (Python package manager)..."
    mise use -g uv@latest
  fi
  
  if ! command -v kubectl >/dev/null; then
    echo "â˜¸ï¸  Installing kubectl (Kubernetes CLI)..."
    mise use -g kubectl@latest
  fi
  
  if ! command -v flux >/dev/null; then
    echo "ğŸ”„ Installing flux (GitOps toolkit)..."
    mise use -g flux@latest
  fi
  
  if ! command -v k9s >/dev/null; then
    echo "ğŸ• Installing k9s (Kubernetes TUI)..."
    mise use -g k9s@latest
  fi
  
  echo "âœ… All critical tools checked/installed"
fi

# Create necessary directories
echo "ğŸ“ Creating configuration directories..."
mkdir -p "$HOME/.config"
mkdir -p "$HOME/.local/bin"
mkdir -p "$HOME/bin"
mkdir -p "$HOME/repos"

echo ""
echo "ğŸ‰ Dotfiles setup complete!"
echo ""
echo "Next steps:"
echo "1. Restart your terminal or run: exec zsh"
echo "2. Verify installations:"
echo "   - mise list: show all installed tools"
echo "   - uv --version: Python package manager"
echo "   - kubectl version --client: Kubernetes CLI"
echo "   - flux version: GitOps toolkit"
echo "   - k9s version: Kubernetes TUI"
echo "   - tmux -V: terminal multiplexer"
echo "3. Additional tools to install manually if needed:"
echo "   - docker: for containerization"
echo ""

exit 0